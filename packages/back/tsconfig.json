{
  "extends": [
    "@tsconfig/node20",
    "../../tsconfig.base.json"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}